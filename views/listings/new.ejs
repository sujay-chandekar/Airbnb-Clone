<% layout("../layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2 md-2">
        <h3>Create A New Listing</h3>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" id="title" type="text" class="form-control" placeholder="Enter catchy title" required>
            <div class="valid-feedback">
                Title Looks good!
              </div>
              <div class="invalid-feedback">
                Enter Valid Title!
              </div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Discription</label>
            <textarea name="listing[description]" id="description" placeholder="Enter Description" rows="5" class="form-control" required></textarea>
            <div class="valid-feedback">
                Description Looks good!
              </div>
              <div class="invalid-feedback">
                Enter Discription!
              </div>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Select Listing Image</label>
            <input name="listing[image]" type="file" id="image" class="form-control">
        </div>
        <div class="row">
            <div class="col-md-4 mb-3">
                <label for="price" class="form-label">Price</label>
                <input name="listing[price]" id="price" class="form-control" placeholder="1200" required>
                <div class="valid-feedback">
                    Price Looks good!
                  </div>
                  <div class="invalid-feedback">
                    Enter Price!
                  </div>
            </div>
            <div class="col-md-8 mb-3">
                <label for="country" class="form-label">Country</label>
                <input name="listing[country]" id="country" type="text" class="form-control" placeholder="India" required>
                <div class="valid-feedback">
                    Country Looks good!
                  </div>
                  <div class="invalid-feedback">
                    Enter Country!
                  </div>
            </div>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input name="listing[location]" id="location" type="text" class="form-control" placeholder="Pune,Maharashtra" required>
            <div class="valid-feedback">
                Location Looks good!
              </div>
              <div class="invalid-feedback">
                Enter Valid Location!
              </div>
            </div>
        <button type="submit" class="btn btn-success add-btn mb-3">Add</button>
    </form>
    </div>
</div>